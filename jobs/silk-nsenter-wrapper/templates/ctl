#!/bin/bash

set -e
set -u

PIDFILE=/var/vcap/sys/run/silk-nsenter-wrapper/job.pid
LOGDIR=/var/vcap/sys/log/silk-nsenter-wrapper
JOBDIR=/var/vcap/jobs/silk-nsenter-wrapper

mkdir -p `dirname "$PIDFILE"`
chown vcap:vcap `dirname "$PIDFILE"`

mkdir -p "$LOGDIR"
chown vcap:vcap "$LOGDIR"

exec >> ${LOGDIR}/silk-nsenter-wrapper-ctl.log
exec 2>&1

case $1 in

    start)
        echo $$ > "${PIDFILE}"

        ln -s -f /var/vcap/jobs/silk-nsenter-wrapper/bin/nsenter /usr/bin/nsenter

        # pretend we're still running to keep monit happy
        echo 1 > "${PIDFILE}"

        ;;

    stop)
        rm -f "${PIDFILE}"

        ;;

    *)
        echo "Usage: control {start|stop}" >&2

        exit 1

        ;;

esac
